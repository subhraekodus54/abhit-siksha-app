<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ProfileActivity">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/profile_shimmer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/back_arrow_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/color_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/profile_htv_2"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:background="@color/color_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back_arrow_2"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_img_2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@color/color_grey"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_htv_2"/>

            <TextView
                android:id="@+id/user_name_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_img_2" />

            <View
                android:id="@+id/user_email_tv_2"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@color/color_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_name_tv_2" />

            <View
                android:id="@+id/view_1_2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@+id/user_email_tv_2" />

            <TextView
                android:id="@+id/contacts_htv_2"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_1_2" />

            <View
                android:id="@+id/mail_img_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_grey"
                app:layout_constraintStart_toStartOf="@+id/contacts_htv_2"
                app:layout_constraintTop_toBottomOf="@+id/contacts_htv_2"/>

            <TextView
                android:id="@+id/mail_tv_2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:background="@color/color_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mail_img_2"
                app:layout_constraintTop_toTopOf="@+id/mail_img_2" />

            <View
                android:id="@+id/view_2_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintEnd_toEndOf="@+id/mail_tv_2"
                app:layout_constraintStart_toStartOf="@+id/mail_tv_2"
                app:layout_constraintTop_toBottomOf="@+id/mail_tv_2" />

            <View
                android:id="@+id/phone_img_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_2_2"/>

            <View
                android:id="@+id/phone_tv_2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginStart="15dp"
                android:background="@color/color_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/phone_img_2"
                app:layout_constraintTop_toTopOf="@+id/phone_img_2" />

            <View
                android:id="@+id/view_3_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintEnd_toEndOf="@+id/phone_tv_2"
                app:layout_constraintStart_toStartOf="@+id/phone_tv_2"
                app:layout_constraintTop_toBottomOf="@+id/phone_tv_2" />

            <View
                android:id="@+id/view_4_2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@+id/view_3_2" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>


    <ScrollView
        android:id="@+id/profile_main_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/profile_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/back_arrow" />

            <ImageView
                android:id="@+id/edit_btn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_edit_24"
                app:layout_constraintBottom_toBottomOf="@+id/back_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                app:tint="@color/black"
                app:layout_constraintTop_toTopOf="@+id/back_arrow" />

            <FrameLayout
                android:id="@+id/user_img_frame"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_htv">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/add_img_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_baseline_add_circle_24"
                    app:tint="@color/sky_blue" />
            </FrameLayout>

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Julia Santos"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_img_frame" />

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@+id/user_name_tv" />

            <TextView
                android:id="@+id/contacts_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Contacts"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_1" />

            <ImageView
                android:id="@+id/mail_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_contact_mail_24"
                app:layout_constraintStart_toStartOf="@+id/contacts_htv"
                app:layout_constraintTop_toBottomOf="@+id/contacts_htv"
                app:tint="@color/sky_blue" />

            <TextView
                android:id="@+id/mail_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:text="Not Available"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/mail_img"
                app:layout_constraintTop_toTopOf="@+id/mail_img" />

            <View
                android:id="@+id/view_2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintEnd_toEndOf="@+id/mail_tv"
                app:layout_constraintStart_toStartOf="@+id/mail_tv"
                app:layout_constraintTop_toBottomOf="@+id/mail_tv" />

            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_contact_phone_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_2"
                app:tint="@color/green" />

            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Not available"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/phone_img"
                app:layout_constraintTop_toTopOf="@+id/phone_img" />

            <View
                android:id="@+id/view_3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintEnd_toEndOf="@+id/phone_tv"
                app:layout_constraintStart_toStartOf="@+id/phone_tv"
                app:layout_constraintTop_toBottomOf="@+id/phone_tv" />

            <View
                android:id="@+id/view_4"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@+id/view_3" />

            <RelativeLayout
                android:id="@+id/address_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/view_4">

                <TextView
                    android:id="@+id/address_htv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/address_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/address_htv"
                    android:layout_alignStart="@+id/address_htv"
                    android:src="@drawable/ic_baseline_home_work_24"
                    app:tint="#E258FA" />

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/address_img"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toRightOf="@+id/address_img"
                    android:text="Address not updated yet."
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/address_below_view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@+id/address_lay"/>
            <TextView
                android:id="@+id/academic_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Academic"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/address_below_view" />
            <ImageView
                android:id="@+id/academic_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="@+id/academic_htv"
                app:layout_constraintTop_toBottomOf="@+id/academic_htv"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_account_balance_24"
                app:tint="@color/orange"/>
            <TextView
                android:id="@+id/academic_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/academic_img"
                app:layout_constraintStart_toEndOf="@+id/academic_img"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/academic_img"
                android:text="Not updated yet"
                android:layout_marginEnd="10dp"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:id="@+id/academic_below_view"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@+id/academic_tv"/>

            <TextView
                android:id="@+id/courses_htv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Courses"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/academic_below_view" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/no_data_lot"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/courses_htv"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/no_subject" />
            <TextView
                android:id="@+id/no_data_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/no_data_lot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="No course found."
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/course_shimmer_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/courses_htv">
                <include layout="@layout/order_item_shimmer_layout" />
            </com.facebook.shimmer.ShimmerFrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/courses_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/courses_htv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>