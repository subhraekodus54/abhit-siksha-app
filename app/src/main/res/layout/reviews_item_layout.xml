<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/you_will_get_bg"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image_view"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="xjhasvxh vahsvxjav"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/star_img"
        android:layout_width="15sp"
        android:layout_height="15sp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        app:layout_constraintStart_toEndOf="@+id/image_view"
        app:tint="#FF9800"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/rating_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="5.0"
        android:textColor="@color/dark_grey3"
        app:layout_constraintStart_toEndOf="@+id/star_img"
        app:layout_constraintTop_toTopOf="@+id/star_img"/>
    <TextView
        android:id="@+id/review_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_view"
        app:layout_constraintTop_toBottomOf="@+id/rating_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:textColor="@color/dark_grey3"
        android:text="Exclusive audio and video lessons."/>

</androidx.constraintlayout.widget.ConstraintLayout>