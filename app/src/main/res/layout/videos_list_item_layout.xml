<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:id="@+id/root_lay"
    android:background="@drawable/video_item_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/thumbnail_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@color/color_grey"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/thumbnail_img"
        app:layout_constraintTop_toTopOf="@+id/thumbnail_img"
        app:layout_constraintEnd_toStartOf="@+id/play_btn"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="This video is a test video"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/lock_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_lock"
            app:tint="@color/theme_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/play_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            app:cardBackgroundColor="@color/orange">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_play_arrow"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/video_duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/lessons_video_count_tv_bg"
        android:backgroundTint="@color/orange"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name_tv"
        app:layout_constraintStart_toStartOf="@+id/name_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>